---
const {
  title,
  img, // image source
  desc,
  url, // astro page url
  badge,
  visit_link, // link to live project
  visit_link_label,
} = Astro.props;
import { Image } from "@astrojs/image/components";
---

<div class="rounded-lg bg-base-100 hover:shadow-xl transition ease-in-out hover:scale-[102%]">
  <a href={url}>
    <div class="hero-content flex-col md:flex-row">
      {
        img && (
          <Image
            aspectRatio="16:9"
            width={750}
            format="webp"
            src={img}
            alt={title}
            class="max-w-full md:max-w-[13rem] rounded-lg"
          />
        )
      }
      <div class="grow w-full p-5 md:p-0">
        <h1 class="text-xl font-bold">
          {title}
          {badge && <div class="badge badge-secondary mx-2">{badge}</div>}
        </h1>
        <div>
          <p class="py-1 text-1xl">{desc}</p>
          <div>
            {
              visit_link && (
                <a class="btn btn-outline grow md:grow-0 ml-0" href={visit_link} target="_blank">
                  {visit_link_label}
                </a>
              )
            }
          </div>
        </div>
      </div>
    </div>
  </a>
</div>